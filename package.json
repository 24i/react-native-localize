    ]
  },
  "peerDependencies": {
    "react-native": ">=0.56.0"
  },
  "devDependencies": {
    "@babel/core": "7.6.2",
    "flow-bin": "0.106.0",
    "husky": "3.0.8",
    "lint-staged": "9.4.1",
    "prettier": "1.18.2",
    "react": "16.9.0",
    "react-native": "0.61.2"
  }
}
